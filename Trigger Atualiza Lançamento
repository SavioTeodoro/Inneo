CREATE OR REPLACE TRIGGER "GRUPOSOULTST"."AD_DEL_TCSCON_LANC" 
BEFORE DELETE ON AD_TCSLAN
FOR EACH ROW
DECLARE
    V_NUMLANC NUMBER;
    V_NUMCONTRATO NUMBER;
BEGIN
    -- Armazena o valor do campo numero em uma vari√°vel local
    V_NUMLANC := :OLD.NUMLANC;
    V_NUMCONTRATO := :OLD.NUMCONTRATO;    

IF V_NUMLANC <> 0 AND V_NUMCONTRATO <> 0 THEN
        UPDATE AD_TCSCONCONTABIL SET STATUSCONT = 'N' WHERE NUMCONTRATO = V_NUMCONTRATO;
    END IF;
END;

/
